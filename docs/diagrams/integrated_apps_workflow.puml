@startuml integrated_apps_workflow
skinparam componentStyle uml2

package "Interface Definition" {
    [interface.py] as IDL
    note right of IDL
        Defines:
        - MathService
        - StringService
        - SortService
        - Complex Types
    end note
}

package "Code Generation" {
    [tools/codegen/main.py] as CodeGen
    [tools/fusion/build.py] as Builder
}

package "Generated Artifacts (build/generated)" {
    folder "Python" {
        [runtime.py] as PyGen
        [bindings.py] as PyBindings
    }
    folder "C++" {
        [fusion_hawking.h] as CppGen
        [bindings.h] as CppBindings
    }
    folder "Rust" {
        [mod.rs] as RustGen
        [bindings.rs] as RustBindings
    }
    folder "JS/TS" {
        [index.ts] as JsGen
        [types.ts] as JsBindings
    }
}

package "Applications" {
    [Python App] as PyApp
    [C++ App] as CppApp
    [Rust App] as RustApp
    [JS/TS App] as JsApp
    
    [config.json] as Config
}

' Build Flow
IDL --> Builder : Included in Build
Builder --> CodeGen : Invokes
CodeGen --> PyGen : Generates
CodeGen --> CppGen : Generates
CodeGen --> RustGen : Generates
CodeGen --> JsGen : Generates

' Usage Flow
PyGen --> PyApp : Imported
CppGen --> CppApp : Included
RustGen --> RustApp : Used
JsGen --> JsApp : Imported

Config --> PyApp : Configures Instances
Config --> CppApp : Configures Instances
Config --> RustApp : Configures Instances
Config --> JsApp : Configures Instances

@enduml
